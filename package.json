{
    "name": "vue-discovery-mtm",
    "displayName": "Vue Discovery MTM",
    "description": "This extension discovers Vue components in your workspace and provides IntelliSense for them.",
    "publisher": "jmanchenos",
    "repository": "https://github.com/jmanchenos/vue-discovery",
    "version": "0.4.0",
    "private": true,
    "license": "MIT",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.53.0",
        "node": ">= 14.0.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Vue Discovery MTM",
            "properties": {
                "VueDiscoveryMTM.rootDirectory": {
                    "type": "string",
                    "default": "/src/components;/src/mixins",
                    "description": "list of root directories in your workspace on whcich search components separated by ;"
                },
                "VueDiscoveryMTM.registeredDirectory": {
                    "type": "string",
                    "default": "/sgtnj-vue-components/src/components",
                    "description": "list of root directories in your workspace on whcich search registered components separated by ;"
                },
                "VueDiscoveryMTM.componentCase": {
                    "type": "string",
                    "enum": [
                        "pascal",
                        "kebab"
                    ],
                    "default": "kebab",
                    "description": "The casing of the imported component"
                },
                "VueDiscoveryMTM.addTrailingComma": {
                    "type": "boolean",
                    "default": true,
                    "description": "Add a trailing comma"
                },
                "VueDiscoveryMTM.propCase": {
                    "type": "string",
                    "enum": [
                        "camel",
                        "kebab"
                    ],
                    "default": "kebab",
                    "description": "The casing of the props"
                },
                "VueDiscoveryMTM.propIconType": {
                    "type": "string",
                    "enum": [
                        "Constant",
                        "Constructor",
                        "Enum",
                        "Field",
                        "Keyword",
                        "Module",
                        "Property",
                        "Snippet",
                        "Text",
                        "Value",
                        "Variable"
                    ],
                    "default": "Snippet",
                    "description": "The type of icon shown for properties of the component (we use Snippet as default to bring them at first positions)"
                },
                "VueDiscoveryMTM.includeRefAtribute": {
                    "type": "boolean",
                    "default": true,
                    "description": "include a 'ref' atribute in the component"
                },
                "VueDiscoveryMTM.hoverComponentInfoType": {
                    "type": "String",
                    "enum": [
                        "catalogue",
                        "props"
                    ],
                    "enumDescriptions": [
                        "Displays component information obtained from the component catalog url",
                        "Displays the list of component props"
                    ],
                    "default": "props",
                    "description": "Define if Componente Catalogue Application help must be used to provide info of a component in DefinitionProvider"
                },
                "VueDiscoveryMTM.componentCatalogueUrl": {
                    "type": "String",
                    "default": "http://10.12.19.106:32006",
                    "description": "URL for Componente Catalogue Application to show examples of how to use them. Only used when property hoverComponentInfoType is set to 'catalogue'"
                }
            }
        },
        "keybindings": [
            {
                "command": "VueDiscoveryMTM.importExisting",
                "key": "ctrl+i",
                "mac": "cmd+i",
                "when": "editorTextFocus"
            }
        ],
        "commands": [
            {
                "command": "VueDiscoveryMTM.importExisting",
                "title": "Vue Discovery MTM: Import a vue component"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "yarn run lint",
        "test": "node ./test/runTest.js",
        "vscode:prepublish": "esbuild --bundle --platform=node --external:vscode --sourcemap  --outdir=dist --minify src/extension.js",
        "build": "esbuild --bundle --platform=node --external:vscode --sourcemap --outdir=dist  src/extension.js",
        "build-dev": "esbuild --bundle --platform=node --external:vscode --sourcemap --outdir=dist src/extension.js --watch",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.7.2",
        "@types/vscode": "^1.59.0",
        "esbuild": "^0.12.23",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.1",
        "mocha": "^9.1.0",
        "prettier": "^2.3.2",
        "typescript": "^4.4.2",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "@vuedoc/parser": "^3.3.0",
        "deepmerge": "^4.2.2",
        "glob": "^7.1.7",
        "lodash": "^4.17.21",
        "url-exists": "^1.0.3"
    }
}
