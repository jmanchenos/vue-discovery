{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "baseUrl": "./",
        "newLine": "lf",
        "allowJs": true,
        "outDir": "./.ts-build-temp",
        "noEmit": true,
        "checkJs": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "includes": [
        "src/**/*.*"
    ]
}